pipeline {
    agent {
		node { label 'slave-2' }
	}
	
    stages {
        stage("Ping server"){
            steps{
                sh 'ansible win -m win_ping -i inventory/host'
            }
        }

        stage('Build') {
            steps {
                echo 'Building..'
		        sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
